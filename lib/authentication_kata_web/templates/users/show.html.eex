<h2>Show Users</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @users.firstname %> <%= @users.lastname %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @users.email %>
  </li>

</ul>

<span><%= link "Edit", to: users_path(@conn, :edit, @users) %></span>
<span><%= link "Back", to: users_path(@conn, :index) %></span>
